<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:EasySaveUI.ViewModel"
             x:Class="EasySaveUI.View.JournauxSettingsView"
             x:DataType="viewmodel:ParametersPageViewModel">
    <ScrollView>
        <StackLayout Margin="20,10,0,0">
            
            <!-- Log d'Ã©tat au format JSON -->
            <Label x:Name="StateLogJSON" FontSize="Medium" FontAttributes="Bold" />
            <StackLayout HorizontalOptions="Start">
                <Label x:Name="StatusLogEntries" />
            </StackLayout>
            
            <!-- Journalier au format XML -->
            <Label x:Name="DailyXMLLabel" FontSize="Medium" FontAttributes="Bold" />
            <StackLayout HorizontalOptions="Start">
                <Label x:Name="XmlLogEntries" />
            </StackLayout>

            <!-- Journalier au format JSON -->
            <Label x:Name="DailyJSONLabel" FontSize="Medium" FontAttributes="Bold" />
            <StackLayout HorizontalOptions="Start">
                <Label x:Name="JsonLogEntries" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentView>
