<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:EasySaveUI.ViewModel"
             x:Class="EasySaveUI.View.ChiffrementSettingsView">
    <VerticalStackLayout>
        <FlexLayout Direction="Column">
            <Label Text="Liste des types à chiffrer :"
                Margin="10,10,0,0"/>
            <Editor x:Name="editor"
                    Placeholder="Un type par ligne"
                    HeightRequest="70"
                    TextChanged="OnEditorTextChanged"
                    Margin="10,5,10,0"/>
            <Button Text="Valider"
                    HorizontalOptions="End"
                    Margin="10,5,10,0"
                    Clicked="SaveEditorButton_Clicked"/>
        </FlexLayout>
        <FlexLayout Direction="Column">
            <Label Text="Clé de chiffrement :"
                   Margin="10,10,0,0"/>
            <Entry 
                Margin="10,5,10,0"/>
            <Button Text="Valider"
                HorizontalOptions="End"
                Margin="10,5,10,0"/>
        </FlexLayout>
            
    </VerticalStackLayout>
</ContentView>
