<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:EasySaveUI.ViewModel"
             x:Class="EasySaveUI.View.LanguesSettingsView">
    <VerticalStackLayout Margin="0,50,0,10"
            HorizontalOptions="Center"
            VerticalOptions="Center">
        <Label 
            Text="Sélectionnez votre langue :"
            Margin="0,0,0,10"
            FontAttributes="Bold"/>

        <!-- Sélecteur de langue -->
        <Picker x:Name="LanguagePicker"
                Title="Langue"
                SelectedIndexChanged="OnLanguageSelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Anglais</x:String>
                    <x:String>Français</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button Text="Valider"
                Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentView>
