<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:EasySaveUI.ViewModel"
             x:Class="EasySaveUI.View.GeneralSettingsView">
    <VerticalStackLayout>
        <!-- PremiÃ¨re ligne -->
        <Label Text="Taille maximum des fichiers :"
               Margin="20,10,0,0"/>
        <FlexLayout Direction="Row">
            <Entry x:Name="TailleFichiersEntry"
                   Placeholder="Taille des fichiers"
                   Margin="10,5,10,0"/>
        </FlexLayout>

        <FlexLayout Direction="Column">
            <Label Text="Ajouter des types :"
                   Margin="10,10,0,0"/>
            <Editor x:Name="editor"
                Placeholder="Un type par ligne"
                HeightRequest="70"
                TextChanged="OnEditorTextChanged"
                Completed="OnEditorCompleted"
                    Margin="10,5,10,0"/>
            <Button Text="Valider"
                HorizontalOptions="End"
                Margin="10,5,10,0"/>
        </FlexLayout>
    </VerticalStackLayout>
</ContentView>
