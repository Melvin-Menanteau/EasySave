<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:EasySaveUI.ViewModel"
             x:Class="EasySaveUI.View.GeneralSettingsView">
    <FlexLayout Direction="Column"
                BackgroundColor="White"
                Padding="20"
                Margin="10"
                AlignContent="Start">

        <!-- Champs d'entrée pour les paramètres -->
        <Entry x:Name="LogicielMetierEntry"
               Placeholder="Paramétrer les logiciels métier"
               Margin="0,10"
               HorizontalOptions="Start"/>

        <Entry x:Name="TailleFichiersEntry"
               Placeholder="Taille des fichiers"
               Margin="0,10"
               HorizontalOptions="Start"/>

        <Entry x:Name="FichiersPrioritairesEntry"
               Placeholder="Fichiers prioritaires"
               Margin="0,10"
               HorizontalOptions="Start"/>

        <Button Text="Général"
                Margin="0,10,0,0"
                HorizontalOptions="Start"/>
    </FlexLayout>
</ContentView>
